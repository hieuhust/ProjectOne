<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.anonymous.carchecker.common.view.CustomCardView
        android:id="@+id/card_view_fragment_position_info_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/fragment_postion_info_item_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_status_info_fragment_position_info_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/overspeed_icon" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5">

                <LinearLayout
                    android:id="@+id/icon_detail_info_fragment_position_info_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_margin_fragment_position_info_item"
                    android:layout_marginTop="@dimen/text_margin_fragment_position_info_item"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/number_plates_fragment_position_info_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:clickable="false"
                        android:text="24C-03033"
                        android:textAppearance="?attr/textAppearanceListItem" />

                    <TextView
                        android:id="@+id/current_speed_fragment_position_info_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textAppearance="?attr/textAppearanceListItem" />

                    <ImageView
                        android:id="@+id/icon_drive_time_in_day_fragment_position_info_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:gravity="center"
                        android:padding="5dp"
                        android:src="@drawable/clock40"
                        android:textAppearance="?attr/textAppearanceListItem" />

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/speed_in_rule_fragment_position_info_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/red_circle"
                            android:clickable="false"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="80"
                            android:textAppearance="?attr/textAppearanceListItem" />
                    </FrameLayout>

                    <ImageView
                        android:id="@+id/icon_fuel_fragment_position_info_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:clickable="false"
                        android:gravity="center"
                        android:padding="5dp"
                        android:src="@drawable/fuel"
                        android:textAppearance="?attr/textAppearanceListItem" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/text_detail_info_fragment_position_info_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon_detail_info_fragment_position_info_item"
                    android:layout_marginBottom="@dimen/text_margin_fragment_position_info_item"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/current_status_fragment_position_info_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:clickable="false"
                        android:textAppearance="?attr/textAppearanceListItem"
                        android:text="Dừng 12'" />

                    <TextView
                        android:id="@+id/distance_total_fragment_position_info_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="129" />

                    <TextView
                        android:id="@+id/tv_drive_time_in_day_fragment_position_info_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="30'" />

                    <TextView
                        android:id="@+id/number_invalid_fragment_position_info_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="1 lần" />

                    <TextView
                        android:id="@+id/tv_status_fuel_fragment_position_info_item"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="429/594" />
                </LinearLayout>

                <TextView
                    android:id="@+id/current_position_fragment_position_info_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_detail_info_fragment_position_info_item"
                    android:text="Đường nhỏ, Quang Sơn, TT Tam Điệp, Ninh Bình fafasf" />

            </RelativeLayout>
        </LinearLayout>
    </com.anonymous.carchecker.common.view.CustomCardView>
</LinearLayout>
