<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog"
    android:orientation="vertical"
    android:paddingLeft="@dimen/custom_dialog_padding_left"
    android:paddingRight="@dimen/custom_dialog_padding_right"
    android:paddingTop="@dimen/custom_dialog_padding_top">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/custom_dialog_title_margin_bottom"
        android:fontFamily="@string/roboto_medium"
        android:gravity="left"
        android:textColor="#252525"
        android:textSize="@dimen/custom_dialog_title_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/custom_dialog_message_margin_bottom"
        android:fontFamily="@string/roboto_regular"
        android:gravity="left"
        android:textColor="#252525"
        android:textSize="@dimen/custom_dialog_message_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/custom_dialog_action_margin_bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvLeft"
            style="@style/DialogActionText"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/custom_dialog_action_height"
            android:layout_marginRight="@dimen/custom_dialog_action_margin"
            android:clickable="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvMiddle"
            style="@style/DialogActionText"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/custom_dialog_action_height"
            android:layout_marginLeft="@dimen/custom_dialog_action_margin"
            android:layout_marginRight="@dimen/custom_dialog_action_margin"
            android:clickable="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvRight"
            style="@style/DialogActionText"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/custom_dialog_action_height"
            android:layout_marginLeft="@dimen/custom_dialog_action_margin"
            android:clickable="true"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>